<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview2"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerHorizontal="true"
            android:id="@+id/item_image_view"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/item_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_below="@+id/item_image_view"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/item_description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/item_name_view"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/item_price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/item_description_view"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/item_category_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/item_price_view"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/item_availability_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="availability"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/item_category_view"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btn_item_edit"
            android:layout_below="@+id/item_availability_view"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_item_edit"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#E91E63"
            android:gravity="center"
            android:text="Delete" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>